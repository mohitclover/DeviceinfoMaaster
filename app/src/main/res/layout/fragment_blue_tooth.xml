<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:airbnb="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/font_white"
    tools:context="com.quixom.apps.deviceinfo.fragments.BlueToothFragment">

    <include
        android:id="@+id/bluetoothToolbar"
        layout="@layout/toolbar" />

    <Button
        android:id="@+id/bluetoothOnOff"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#0A3C91"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/turn_on_bluetooth"
        android:textAllCaps="false"
        android:textColor="@color/font_white" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardBluetoothData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bluetoothToolbar"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <TableRow
                    android:gravity="start"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="5"
                        android:maxLines="4"
                        android:text="@string/bluetooth_state"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:id="@+id/tv_bluetooth_state"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="4"
                        android:maxLines="4"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        tools:ignore="MissingPrefix"
                        tools:targetApi="jelly_bean" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="5"
                        android:maxLines="4"
                        android:text="@string/bluetooth_name"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:id="@+id/tv_bluetooth_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="4"
                        android:maxLines="4"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        tools:ignore="MissingPrefix"
                        tools:targetApi="jelly_bean" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="5"
                        android:maxLines="4"
                        android:text="@string/bluetooth_address"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:id="@+id/tv_bluetooth_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="4"
                        android:maxLines="4"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        tools:ignore="MissingPrefix"
                        tools:targetApi="jelly_bean" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="5"
                        android:maxLines="4"
                        android:text="@string/scan_mode"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:id="@+id/tv_bluetooth_scan_mode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="4"
                        android:maxLines="4"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        tools:ignore="MissingPrefix"
                        tools:targetApi="jelly_bean" />
                </TableRow>

                <TableRow
                    android:layout_marginTop="10dp"
                    android:gravity="start"
                    android:padding="5dp"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="5"
                        android:maxLines="4"
                        android:text="@string/bluetooth_discovery"
                        android:textColor="@color/secondary_text"
                        android:textSize="14sp"
                        tools:targetApi="jelly_bean" />

                    <TextView
                        android:id="@+id/tv_bluetooth_discovery"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:fontFamily="@font/lato_regular"
                        android:gravity="start"
                        android:maxEms="4"
                        android:maxLines="4"
                        android:textColor="@color/primary_text"
                        android:textSize="14sp"
                        tools:ignore="MissingPrefix"
                        tools:targetApi="jelly_bean" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/bluetoothAnimationView"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/cardBluetoothData"
        android:layout_gravity="center_horizontal"
        airbnb:lottie_autoPlay="true"
        airbnb:lottie_cacheStrategy="strong"
        airbnb:lottie_enableMergePathsForKitKatAndAbove="true"
        airbnb:lottie_fileName="deviceinfo_bluetooth.json"
        airbnb:lottie_loop="true"
        tools:targetApi="lollipop" />

</RelativeLayout>
