    <style name="DisplayTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#3d3254</item>
        <item name="colorPrimaryDark">#2a233a</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FeaturesTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#593300</item>
        <item name="colorPrimaryDark">#321d00</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="UserAppsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#04a8ba</item>
        <item name="colorPrimaryDark">#037480</item>
        <item name="colorAccent">@color/colorAccent</item>
